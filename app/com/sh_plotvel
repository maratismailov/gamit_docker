#       endif
		if ( $color  == yes  ) then
        		gmt psxy tmp.eq1  $V -h0 $OPTION   -K   -O $page -Sc0.015i  -W1p,0/0/255 -G0/0/255   >> $psfile
		else
#        		gmt psxy tmp.eq1   -V  -h0  $OPTION   -K   -O $page -Sc0.015i  -W1p,255/0/0    >> $psfile
         set eqint = $#eqdepth
         set c = 0
         while ( $eqint > 1 )
           @ c = $c + 1
           set scolor = "arrowcolor$c"
           set ecolor = `eval echo \$${scolor}`
           awk '{ if ($4 < 4.5) print $1,$2}' tmp.eq${c}              | gmt psxy    -V  -h0  $OPTION   -K   -O $page -Sc0.04i  -W2p,$ecolor -G${ecolor} -:  >> $psfile
           awk '{ if ($4 >= 4.5 && $4 < 5.5) print $1,$2}' tmp.eq${c} | gmt psxy    -V  -h0  $OPTION   -K   -O $page -Sc0.06i  -W2p,$ecolor -G${ecolor} -:  >> $psfile
           awk '{ if ($4 >= 5.5 && $4 < 6.5) print $1,$2}' tmp.eq${c} | gmt psxy    -V  -h0  $OPTION   -K   -O $page -Sc0.09i  -W2p,$ecolor -G${ecolor} -:  >> $psfile
           awk '{ if ($4 >= 6.5 && $4 < 7.5) print $1,$2}' tmp.eq${c} | gmt psxy    -V  -h0  $OPTION   -K   -O $page -Sc0.11i  -W2p,$ecolor -G${ecolor} -:  >> $psfile
           awk '{ if ($4 >= 7.5) print $1,$2}' tmp.eq${c}             | gmt psxy    -V  -h0  $OPTION   -K   -O $page -Sc0.15i  -W2p,$ecolor -G${ecolor} -:  >> $psfile

