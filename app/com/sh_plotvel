if ( $eqlocation  != ""  ) then
  	if ( -e $eqlocation ) then   
	  echo " Generating earthquake plot file from "$eqlocation 
     cat $eqlocation >! tmp.eq1
     if ( $#eqdepth > 1 ) then
       set eqint = $#eqdepth
       set c = 0
       set d = 1
       while ( $eqint > 1 )
         @ c = $c + 1
