		breaksw
	case -eqfocal_aki:
		set eqfocal_aki         = $input[2]
		breaksw
	case -eqlocation:
		set eqlocation         = $input[2]
		breaksw
	case -eqdepth: 
       set eqdepth =  (`echo $argv | cut -d- -f2`); shift eqdepth 
       echo "eqdepth $eqdepth"
		breaksw
        case -eqmag:
		set eqmag         = $input[2]
		breaksw
	case -eqslip:
		set eqslip         = $input[2]
		breaksw
	case -palette:
