		breaksw      
        case -wlon:
                set wlon = yes 
                gmt gmtset FORMAT_GEO_MAP -D
                breaksw 
	case -B*: 
 		set border      =  ($border $input[1] " ")
		breaksw
	case -boundary: 
 		set  boundary   =  yes
		breaksw   
        case -clw
                set clw         =  $input[2]
                breaksw
	case -min_area:
