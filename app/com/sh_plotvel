         cat $eqlocation | awk '$8 >= min && $8 < max && $9 >= mag {print $6, $7, $8, $9}' mag=$eqmag min=$eqdepth[$c] max=$eqdepth[$d] >! tmp.eq${c}
#         cat $eqlocation | awk '{print $6, $7}' mag=$eqmag min=$eqdepth[$c] max=$eqdepth[$d] >! tmp.eq${c}
