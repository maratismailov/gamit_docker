	case -g: 
	case -gmt:
 		set  gmtfile    =  $input[2]
		breaksw  
	case -map: 
                set map   =   ( $map $input[2] )
                shift input; shift input
                while ( $#input > 0 &&   `echo  $input[1]  | cut -c1` != "-" )
                        set inarg =  $input[1]
                        if ( `echo  $inarg | cut -c1` != "-" ) then
                                set map    =   ( $map $inarg )
				if ( $#input == 1 ) goto alldone
                                shift input
                        endif
                end
                if ( $#input == 0 ) goto alldone
                breaksw  
	case -maplist:
