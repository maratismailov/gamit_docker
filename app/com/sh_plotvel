		breaksw
	case -illu_file:
		set illu_file         = $input[2]
		breaksw
	case -fixed:
		set fixed        =  ( $input[2]  $input[3] )
		if    ( $#input == 0 ) goto alldone
		breaksw
	case -e:
	case -errorbar:
		set errorbar    =  no
		breaksw
	case -e2:
	case -errorbar2:
		set errorbar2    =  no
		breaksw
	case -e3:
	case -errorbar3:
		set errorbar3    =  no
		breaksw
	case -e4:
	case -errorbar4:
		set errorbar4    =  no
		breaksw
	case -topo:
		set topo        =  yes
       set yshift       = '1.0i' 
		breaksw
	case -psscale:
		set psscale        =  yes
       set psscale_width        =  $input[2]
		breaksw
	case -raster:
		set raster       =  -3 
#"psto24 -b 255 255 255 colors.ras8 colors.ras.24"
		breaksw
	case -u: 
	case -uncscale:
	case -u1: 
	case -uncscale1:
 		set uncscale    =  $input[2]
