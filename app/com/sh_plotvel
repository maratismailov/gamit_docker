		breaksw
	case -vts:
                set VERTscale     = yes 
		set VERTSCALE     =  `echo $input[2] | awk '{print $1 / 25.4}'`
		breaksw
	case -factor:
        	        set VELscale     = yes 
			set factor        =  $input[2]
			set VELSCALE     =  `echo  $VELSCALE    $factor | awk '{print $1 * $2}'`
			set arrow_value  =  `echo  $arrow_value $factor | awk '{print $1 / $2}'`
		breaksw
	case -bound_check:
		set bound_check = no
		breaksw
	case -du*:
	case -ps:
		set makePSname  =  no
		set psfile      =  $input[2].ps
		set prefix = $input[2]
		breaksw
	case -epicentre:
       set epilat            = $input[2]
       set epilon            = $input[3]
		breaksw
	case -epicentre2:
