#!/bin/csh -f
#
#doc Create maps of station velocities from GLOBK and GLORG output files.
#doc
#
echo " "    
echo "Arguments for sh_plotvel: " $argv 
echo " " 
#
# Shell script for creating GMT maps of station velocities from GLOBK and GLORG
# output files.  It is a generic version of the script sh_vel_gmt written by
# M Burc Oral of MIT's ERL between Feb 1993 and Aug 1994.  The chronology
# of the original script and documentation for some features not included in
# this version may be found in /contributions/oral/com_globk.  
# R. King and S. McClusky October 1995.   Last modified by R. King 981021
#
# MODTAH 000127: Made treatment of long-360 same for files 3 and 4 as for files
# 1 and 2.   
#
# MOD Simon 020407: 
# MOD RWK 020905: Change logic so that the -map option sort-of works as an initial
#     call.  It still doesn't work with coastlines and political boundaries, nor,
#     probably does the -maplist option work. To fix all of this we need to change
#     the logic significantly for these first calls.
# MOD 021114 Kurt
#     Fix to work on GMT compiled with SI units
# MOD rwk 070720: Change to work by default with 0-360 E longitude; add -wlon
#     option to invoke -180 - +180.  Note that extra map files (e.g. faults)
#     must be consistent with the option chosen. 
# MOD rwk 100218: Add option to plot block boundaries.  Echo file names for block boundaries,
#     faults, and Euler poles   
# MOD Gilbert Ferhat  110119: Change to work with GMT4
#     -Di is not longer used. -Du for US defaults,
#     replace old DEGREE_FORMAT option by PLOT_DEGREE_FORMAT to get 117W for longitude 
# MOD TAH 171220: Updated the -B option so that multiple values can be used to be consistent
#     with GMT5 multiple -B options.
#     Note epiradius is now diameter in GMT5
# MOD MAF 200221: Added call to sh_dem to create topographic (and, optionally,
#                 illumination) .grd-file for GMT grdimage.
# MOD MAF 200413: Corrected definition of maximum longitude in minmax variable
#                 when passing topo_file name from sh_dem to grdimage for
#                 plotting, and updated logic to derive an illumination .grd-
#                 file from topo_file by requiring "topo_file" to be passed as
#                 the argument to the "-illu_file" option.
# MOD TAH 200515: Added coastline line specification (-cwl opton)
# MOD MAF 200818: Added tests to recognize DEM file name (from "-topo_file"
#                 option) with longitudes in the range 180W-180E (default output
#                 from sh_dem) and 0E-360E.
#
#2345678901234567890123456789012345678901234567890123456789012345678901234567890
if ( $#argv == 0  || `echo $1 | cut -c2-` == "help"   ) then
echo "  "
echo " Script to plot station velocities on a map, using a GLOBK prt file as input."
echo " "
echo " Options allow selection of stations, multiple velocities, and enhanced maps. " 
echo " "
echo " Basic usage : "
echo "  "
echo "            sh_plotvel -f <file> -s <site>      "   
echo " "
echo "    -file              : Input GLOBK prt file or GETREL file"
echo "    -site              : 4-char station id of reference site for velocities"  
echo "                         (requires BRAT print option) "
echo "                         If site omitted, plot absolute velocities"
echo "  "                       
echo " With no additional options specified, the map features will be taken from the "
echo " global map in the GMT library.  Three mutually exclusive options are available "
echo " to obtain enhanced or specialized maps: "
echo " " 
echo "   -mapscript file     : Execute the shell script [file] to produce the map "
echo "                           See sh_map_turk in gs/com for a template "
echo " "
echo "   -map list           : Use the list of maps specified from ~/gg/maps/[file]"
echo " "
echo "   -maplist file       : Overlay the maps with full pathnames specified in [file] " 
echo " "  
echo "      With either of these last two options, you should set the range of the map using the option "
echo "   "
echo "   -maprange type      : Calls sh_map_elements with the keyword <type> to select a region."
echo "                         Among those allowed are <world> <europe> <turkey> <cal> "
echo "                         See sh_map_elements for a complete list or to add your own"  
echo " "
echo "      and if a coastline map is not included, you must specifiy -coast to get the GMT coastlines."
echo " "             
echo " Output:"
echo " "      
echo "   -c[omment]  text    : Title for plot.  No need for quotes. This option should be issued LAST "
echo " "                              
echo "   -figcap             : Turn off figure caption mode. Header is off; comment is figure caption."    
echo " "
echo "   -h[eader]           : Turn off header prints. Default is ON, print header."
echo "  "
echo "   -p[rinter]  name    : Printer name.  If null use system default. "
echo "  "
echo "   -ps file            : postscript save file. Default is FILE.SITE.ps"
echo "  " 
echo " To get complete help on all available commands enter:  sh_plotvel -help "
echo " "
echo " Limitations:  Cannot be run in background "
echo " "
echo " See the script for requirements and documentation of extended features."
echo " "
echo " Example:  sh_plotvel -f turkey.prt -s yigi -mapscript sh_map_turk "
echo " "   
echo " "
echo " Requirements          : GLOBK prt-file "
echo "                       : GMT(netcdf/gmt/ghostscript)"
echo "                       : mag_azim (Fortran program in gamit/utils)"
echo "                       : sh_map_elements (for option -maprange; in gamit/com) " 
echo "                       : for specialized maps (-map option), the location of"
echo "                         the maps, set as 'root_map' below (default is ~/gg/maps "
echo "                         where 'gg' is an alias for the level above 'gamit' and 'kf'"

if ( $argv == "-help" )  then
  cat << END
===================
 Extended features
===================
----------------------------------------------------------------------------------------
 << Station and velocity options >>

   -d[elete]  sites    : Remove listed site names from tables. Case insensitive; does not work for -name and -vel.
   -D[ELETE]  file     : Remove sites listed in the file from tables. Case insensitive; does not work for -name and -vel.
   -I[NCLUDE] file     : List of sites to be included.

   -delsigma  sites    : Do not plot sigmas/error ellipses for listed sites.

   -e[rrorbar]         : Turn off plotting of error ellipses.  Default is ON.

   -maxsigma  value    : Maximum sigmas/error ellipses to be plotted (both E & N in original file must be < maxsigma)

   -maxvect   value    : Maximum vector length to be plotted

   -factor  value      : Scale the internally defined arrow value. by this factor

   -fixed  lon lat     : Fixed site in velocity plots.

   -u  value           : Scale the uncertainties by this factor.  Example -u 1.7

   -i[nterval]  value  : Confidence interval. Default is 95(%). Example -i 95

   -glist  file opt    : Input name of GLIST output file for plotting - opt = num, tsl or all

   -name               : Plot only site locations and their names, no velocities.
                         File is either in getrel format or lon/lat or lon/lat/site-name
                         THIS OPTION NO LONGER WORKS; see -namefile below

   -namefile  files    : Plot site locations with names taken from [files] (more than one allowed).
                         Suggestion:  run without -namefile and modify the tmp.names. Rename it and
                         use this file for nicer plots. (input file must be in in GMT pstext format:
                           41.564  43.789  ZECK d noname
                         but with the 2d-to-last field optionally added to specify the symbol used
                         to plot the site-- c, s, d, t, r specify circle, square, diamond, triangle or star,
                         respectively (default is triangle)-- and the last field blank or noname to omit
                         the name (plot the symbol only.  When plotting both velocities and names, set
                         -sitefont 0 to avoid double printing of names

   -nameshift  value   : Y axis distance in inches to shift all station names on plot ( Default 0.0 )

   -plain              : Plot sites without names

   -symbol_size        : Size in inches of the symbols to be plotted from the names file (Defautl 0.1).

   -symbol_color       : Color in R/G/B of the symbols to be plotted from the names file (Defautl 0/0/0).

   -arrow_value  value : define the size of the velocity scale arrow in mm. Default = 20mm/yr

   -vs  value          : define velocity scale. Default is 1.0 = 1:1 ratio (plot:file)

   -save_gmt           : save the GMT format plot files used to generate plot

--------------------------------------------------------------------------------------------
 << Multiple velocity solutions >>

   -f[ile] file        : Input GLOBK prt-file
   -f1

   -file2  file2       : Input getrel-ed comparison file. Green arrows/ellipses in all cases
   -f2                   Assumes identital parameters (confidence interval scaling)

   -file3  file3       : Input getrel-ed comparison file. Green arrows/ellipses in all cases.
   -f3                   Assumes identital parameters (confidence interval scaling)

   -file4  file4       : Input getrel-ed comparison file. Green arrows/ellipses in all cases.
   -f4                   Assumes identital parameters (confidence interval scaling)

   -file5  file5       : Input getrel-ed comparison file. Green arrows/ellipses in all cases.
   -f5                   Assumes identital parameters (confidence interval scaling)

    File format
    Long.  Lat.   E-Rate N-Rate   E-Adj N-Adj  E-Unc  N-Unc   E-N-RHO   Vert-Rate  Vert-adj  Vert-Unc  SITE

  The uncertainties for each of these solutions may be scaled separately:

    -u[ncscale] value  : scale uncertainties with value. Default is 1.
    -u1                  if issued automatic scaling with chisqr of the experiment.

    -u[ncscale]2 value : scale uncertainties with value. Default is 1.
    -u2                  if issued automatic scaling with chisqr of the experiment.

    -u[ncscale]3 value : scale uncertainties with value. Default is 1.
    -u3                  if issued automatic scaling with chisqr of the experiment.

    -u[ncscale]4 value : scale uncertainties with value. Default is 1.
    -u4                  if issued automatic scaling with chisqr of the experiment.

 Error ellipses may be surpressed for clarity:

    -e[rrorbar]        : Turn off error bar plotting. Default is ON.

    -e[rrorbar]2       : Turn off error bar plotting for file 2 . Default is ON.
    -e2

    -e[rrorbar]3       : Turn off error bar plotting for file 3 . Default is ON.
    -e3

    -e[rrorbar]4       : Turn off error bar plotting for file 4. Default is ON.
    -e4

 The following color features are useful for multiple solutions.  Must set -color.
    -arrowcolor1       : rgb numbers. Default is black 0/0/0. -color default is black 255/0/0.
    -arrowcolor2       : rgb numbers. Default is black 0/0/0. -color default is red   255/0/0.
    -arrowcolor3       : rgb numbers. Default is black 0/0/0. -color default is green 0/255/0.
    -arrowcolor4       : rgb numbers. Default is black 0/0/0. -color default is blue  0/0/255.
    -arrowcolor5       : rgb numbers. Default is black 0/0/0. -color default is blue  0/0/255.

    -openarrow1        : draw vector arrows for file1 as open (not filled)
    -openarrow2        : draw vector arrows for file2 as open (not filled)
    -openarrow3        : draw vector arrows for file3 as open (not filled)
    -openarrow4        : draw vector arrows for file4 as open (not filled)
    -openarrow5        : draw vector arrows for file5 as open (not filled)

    -arrowfont1  value : weight of arrow vectors for file1 l=light m=medium h=heavy [default = m]
    -arrowfont2        : weight of arrow vectors for file2 l=light m=medium h=heavy [default = m]
    -arrowfont3        : weight of arrow vectors for file3 l=light m=medium h=heavy [default = m]
    -arrowfont4        : weight of arrow vectors for file4 l=light m=medium h=heavy [default = m]
    -arrowfont5        : weight of arrow vectors for file5 l=light m=medium h=heavy [default = m]

 The line number of the first data record in the plot files. Ie number of header lines +1

    -line              : Header lines in file. default = 0

    -line2             : Header lines in file2. default = 0

    -line3             : Header lines in file3. default = 0

    -line4             : Header lines in file4. default = 0

    -line5             : Header lines in file4. default = 0

 File contains velocity sigmas in error ellipse format: semimajor axis ,semiminor axis, azimuth
 [default is sigma north ,sigma east, correlation north-east (rho)]

    -rot               : default not ellipse format

    -rot2              : default not ellipse format

    -rot3              : default not ellipse format

    -rot4              : default not ellipse format

    -rot5              : default not ellipse format

 Plot velocity adjustments/residuals instread of estimated velocities:

    -vel_res        : Plot velocity resuduals Default is estimates.

    -vel_res2       : Plot velocity resuduals for file 2. Default is estimates.

    -vel_res3       : Plot velocity resuduals for file 3. Default is estimates.

    -vel_res4       : Plot velocity resuduals for file 4. Default is estimates.

    -vel_res5       : Plot velocity resuduals for file 4. Default is estimates.

 Plot velocity differences instread of estimated velocities. Reference solution if -f1

    -vel_diff <opt> : Plot velocity differences between solutions -f1 is reference.
                    : opt = both - both ref and diff velocity error ellipses
                    : opt = ref - plot only ref velocity error ellipses

    -vert     : Plot vertical velocities too.

--------------------------------------------------------------------------------------------
  << Enhanced mapping options >>

    -wlon              : Plot with West longitude (i.e. -180 to +180). Default is (0-360).

    -boundary          : Plot political boundaries. Default is no.

    -clw line_spec     : Set line specification for coastline (1p,gray2 default)

    -bound_check       : check bounds for plottting site names. Default is yes.  Use to avoid GMT cut-off.
                    "
    -c text            : Caption for map. No need for quotes. This option should be issued LAST

    -color             : Use color (tones are hardwired).

    -euler file        : Plot euler pole from file, in format given below:
                         Lon:  33.5 +/- 0.6   Lat:  32.9 +/-  1.1   Ang_vel(deg/myr): 1.3 +/-   0.2
                         PLATE -  PLATE        Lat (deg)     +-    Long (deg)    +-       Mag (deg/My)   +-   RhoLaLg RhoLaMa RhoLgMa
                         ANOTOLIA-ARABIA       32.870      0.632     40.249      0.673   0.863318   0.081597  -0.933  0.848 -0.747  LLM

    -scmin     value   : small circle sweep angle start in degrees (default 0).

    -scmax     value   : small circle sweep angle end in degrees (default 360).

    -scint     value   : small circle sweep angle interval in degrees (default 5)

    -scradii   values  : small circle radius in degrees (default 0 : no small circle)

    -epicentre lat lon : Plot earthquake main shock location as a red star.

    -epiradius         : The diameter (GMT5) of influence of an earthquake (2 times value in eq_def line)

    -eqlocation file   : Plot earthquake locations.  File is lon/lat of epicenters.

    -eqdepth list      : List of depth intervals to plot. Eg 0 33 70 150 300 500

    -eqmag value       : Minimum EQ magnitude to plot. Eg 4.0 [Default 0.0]

    -eqfocal_cmt file  : Plot earthquake focal mechanisms cmt format (new format).
    -double_couple     : Plot best double couple CMT

    -eqfocal_cmt_old file  : Plot earthquake focal mechanisms cmt format.

    -eqfocal_aki file  : Plot earthquake focal mechanisms aki format.

    -eqslip file       : Plot earthquake slip vectors.

         File format for for earthquake options.  Must have all entries but unused ones may be zero.
         longitude      latitude       strike  dip     rake    mag     slipV   type    date    ref

    -fault_patch file  : fault patches in GMT line segment file format.

    -blocks file       : block-model boundaries in GMT line segment file format.

    -page option       : Page orientation   P for portrait (default)   L for landscape
                           Fragile. May not work with all options.

    -sitefont          : Size of site names. Default is 07.

    -topo              : Turn on ETOPO5 overlay. Default is no

    -topo_file  file   : netCDF file containing topo data. If the "file"
                         argument is any of the options for sh_dem ("e5", "e2",
                         "e1b", "e1i", "s30", "s30+", "s3" or "s1") then a .grd-
                         file will be created using the chosen DEM and region
                         given with the -R option, below.

    -illu_file  file   : Illumination file for topo data. If "topo_file" is
                         given as the argument, the illumination .grd-file will
                         be derived from the gradient of the "topo_file", above,
                         with an azimuth/elevation of 235/50. 

    -palette  file     : ~/gg/maps/color8_m.cpt is default. Try  ~/gg/maps/color4.cpt

    -psscale  length   : Plot color scale for topo (width is the length of bar). Default is not to plot.

    -min_area  value   : Minimum size of features such as lakes or islands that will be plotted. Default 500km**2

    -coast_res  value  : Selects the resolution of coastline to be plotted (f)ull, (h)igh, (i)intermediate,
                         (l)ow, or (c)crude. Default is: i
 << GMT parameters for custom plotting >>

    -JGMTparameters    : Projection size.  Default is	  -Jm.25     (mercator) Refer to GMT manual

    -RGMTparameters    : Projection range. Default is  -R22/48/32/45 (mercator) Refer to GMT manual

    -BGMTparameters    : Projection borders.      Default is    -Bxf2 -Byf2 -BWSen (mercator) Refer to GMT manual

    The following control placement on plot of the distance and velocity scale :

    -arrow             : DO not plot arrow.
    -arrowxp           : Default is lower right corner. Arrow scale longitude position; you have to know the map bounds.
    -arrowyp           : Default is lower right corner. Arrow scale latitude position; you have to know the map bounds.
    -linear            : DO not plot linear scale.
    -linearxp          : Linear distance scale longitude position; you have to know the map bounds. Default is lower right corner.
    -linearyp          : Linear distance scale lattitude position; you have to know the map bounds. Default is lower right corner.
    -linearscale       : Length of linear scale bar in km. Default is calculated according to plot scale
END
endif
exit
endif 
   
##################### Set defaults for GMT to override local options #########################   
#gmt gmtdefaults -Du >! gmt.conf
# -Du = US defaults GF
gmt gmtdefaults -Du >! gmt.conf
gmt gmtset GMT_COMPATIBILITY 5
gmt gmtset PS_MEDIA letter  
gmt gmtset PROJ_LENGTH_UNIT i    
gmt gmtset MAP_DEFAULT_PEN ,5/5/5 
gmt gmtset FONT_LABEL 10p    
gmt gmtset FONT_ANNOT_PRIMARY 14p     
gmt gmtset FONT_TITLE 14p  
# Defaults set here, but -wlon option below can override   
# This will give longitude 0-360 in degrees 
gmt gmtset FORMAT_GEO_MAP +D
# This will give west longitudes as < 180 in degrees 
# gmt gmtset FORMAT_GEO_MAP -D
# This will give longitude 0-360 in deg/min/sec
# gmt gmtset FORMAT_GEO_MAP +ddd:mm:ss
# This will give longitudes 0360 to 0 in deg/min/sec   
# gmt gmtset FORMAT_GEO_MAP -ddd:mm:ss
#       MAP_ANNOT_OFFSET_PRIMARY 0.125i \
#       MAP_TICK_LENGTH_PRIMARY=-0.075i \

##################### Set up the input option defaults  #######################################
set arrow        = yes
set arrow_symbol =  mm/yr
set vert_symbol =  mm/yr
set arrow_value  =  20
set vert_value  =  20
set arrowcolor1  = "0/0/0"
set arrowcolor2  = "255/0/0"
set arrowcolor3  = "0/255/0"
set arrowcolor4  = "0/0/255"
set arrowcolor5  = "200/0/255"
set openarrow1 = "no"
set openarrow2 = "no"
set openarrow3 = "no"
set openarrow4 = "no"
set openarrow5 = "no"
set arrowfontl  = "-A0.08+e+p0.5p"
set arrowfontm  = "-A0.12+e+p1.5p"
set arrowfonth  = "-A0.12+e+p3p"
set arrowfont1 = $arrowfontm
set arrowfont2 = $arrowfontm
set arrowfont3 = $arrowfontm
set arrowfont4 = $arrowfontm
set arrowfont5 = $arrowfontm
set arrowxp = ""
set arrowyp = ""
set vertxp = ""
set vertyp = ""     
set blocks = none
set border       = ""
set bound_check = yes 
set boundary    = no
set c            = " "  
set c1           = "0/0/0"  
set c2           = "255/0/0"  
set c3           = "0/255/0"  
set c4           = "0/0/255"  
set c5           = "200/0/255"  
set cal = ""
set chiscale     = yes 
set chisqr       = ""
set clw          = "1p,gray2"
set coast        = ""
set coast_res    = i
set color        = no
set comment      = ""
set confidence  = ""
set delete       = none
set delsigma     = none
set diff_sites   = ""
set dc = "no"
set east = yes
set east2 = yes
set east3 = yes
set east4 = yes  
set east5 = yes  
set epilat = ""
set epilon = ""
set epilat2 = ""
set epilon2 = ""
set epiradius = ""
set epiradius2 = ""
set eqfocal_cmt        = ""
set eqfocal_cmt_old    = ""
set eqfocal_aki        = ""
set eqlocation     =   ""
set eqdepth = (0 999999)
set eqmag = 0
set eqslip   = ""
set errchk = ""
set errorbar     = yes
set errorbar2     = yes
set errorbar3     = yes
set errorbar4     = yes
set errorbar5     = yes
set euler        = none
set fault_patch = none 
set figcap = no 
set file         = none
set file2        = none
set file3        = none
set file4        = none
set file5        = none
set fixed  = ""
set getrel	 = yes 
set gmtfile      = "none"
set glist = ""
set glist_opt = "num"
set header       =  yes
set inc = "none"
set interval     = 95  
set line          = 0
set line2         = 0
set line3         = 0
set line4         = 0
set line5         = 0
set linear   = yes
set linearxp = ""
set linearyp = ""
set linearscale = 20      
set user_linearscale = 'N'
set makePSname   = yes 
set map          = ""  
set maplist      = ""
set maprange     = ""
set mapscript    = ""
set maxsigma     = 100
set maxvect      = ''
set min_area     = 500
set name         = no 
set namefile     = ""
set nameshift    = '0.0i'
set north = yes 
set north2 = yes     
set north3 = yes     
set north4 = yes     
set north5 = yes     
# The sh_ calling option '-page' has value 'P' or 'L' but the GMT option is '-P' 
set page         = -P
set pageopt      =  P
set plain 	 = no    
set printer      = ""
set projection   = ""
set ps           = no 
set psscale       = no      
set psscale_width = '7.0i'
set range        = ""
set raster       = " "  
set rot          = "no"
set rot2         = "no"
set rot3         = "no"
set rot4         = "no"
set rot5         = "no"
set site         = none 
set sitefont     = 07
set topo         = "no"
set uncscale     = 1
set uncscale2    = 1
set uncscale3    = 1
set uncscale4    = 1
set uncscale5    = 1
set vel          = yes
set velfile      = none 
set vel_res      = "no"
set vel_res2     = "no"
set vel_res3     = "no"
set vel_res4     = "no"
set vel_res5     = "no"
set vel_diff     = "no"
set save_gmt     = ""
set SCALE        = ""
set SCALE2       = ""  
set SCALE3       = ""  
set SCALE4       = ""  
set SCALE5       = ""  
set scmin        = 0
set scmax        = 360
set scint        = 5
set scradii      = ""
set sclonpole    = ""
set sclatpole    = "" 
set sclinetype   = ""
set symbol_size_c  = '0.1i'
set symbol_size_s  = '0.1i'
set symbol_size_t  = '0.12i'
set symbol_size_d  = '0.12i'
set symbol_size_r  = '0.12i'
set symbol_color_c  = "0/0/255"
set symbol_color_s  = "0/0/0"
set symbol_color_t  = "255/0/0"
set symbol_color_d  = "0/255/0"
set symbol_color_r  = "200/200/0"
# turn off verbose for calls to GMT routines
#set V            = -V 
set V            = " "   
# VELSCALE set default 1mm plot = 1mm file (1/25.4inch = 1mm file)
set VELSCALE      =  0.039370078 
set VERTSCALE     =  0.039370078 
set VELscale      = no 
set VERTscale     = no 
set vert = no     
set wlon = no 
set yshift       = '1.5i'
# Topography stuff
set root_map     = ~/gg/maps
set palette    =  $root_map/color4.cpt
#set palette    =  $root_map/color8_m.cpt
set illu_file  =  "none"
#set illu_file  =  $root_map/topo62i.grd
set topo_file = ""
# set topo_file  =  $root_map/topo62.grd
#set topo_file  =  $root_map/etopo5.grd

   
##################### Decipher the command line ###################################### 

while ($#argv > 0 ) 
set input = ( $argv ) 
switch($input[1])
	case -f:
	case -f1:
	case -file:
		set file        =  $input[2]
		breaksw
	case -f2:
	case -file2:
		set file2        =  $input[2]
		breaksw
	case -f3:
	case -file3:
		set file3        =  $input[2]
		breaksw
	case -f4:
	case -file4:
		set file4        =  $input[2]
		breaksw
	case -f5:
		set file5        =  $input[2]
		breaksw
	case -s:
	case -site:
		set site        =  $input[2]
		breaksw
	case -arrow:
		set arrow       = no
		breaksw
	case -arrow_value:
		set arrow_value    =  $input[2]
		breaksw
	case -vert_value:
		set vert_value    =  $input[2]
		breaksw
	case -linear:
		set  linear      = no
		breaksw
	case -linearxp:
		set  linearxp      = $input[2]
		breaksw
	case -linearyp:
		set linearyp       = $input[2]
		breaksw
	case -linearscale:
		set linearscale       = $input[2]
                set user_linearscale = "Y"
		breaksw
	case -arrowxp:
		set  arrowxp      = $input[2]
		breaksw
	case -arrowyp:
		set arrowyp       = $input[2]
		breaksw
	case -arrow_symbol:
		set arrow_symbol       = $input[2]
		breaksw
	case -vertxp:
		set  vertxp      = $input[2]
		breaksw
	case -vertyp:
		set vertyp       = $input[2]
		breaksw
	case -vert_symbol:
		set vert_symbol       = $input[2]
		breaksw
	case -east:
		set east       = no
		set north      = yes
		breaksw
	case -north:
		set north       = no
		set east        = yes
		breaksw
	case -name:
		set vel         =  no 
		set name        =  yes
#		set arrow       =  no
		breaksw
	case -nameshift:
		set nameshift   =  $input[2] 
		breaksw
	case -sitefont:
		set sitefont =  $input[2]
		breaksw
	case -save_gmt:
		set save_gmt       = yes
		breaksw
	case -namefile:
		set vel         =  no 
		set name        =  yes
                set namefile   =   ( $namefile $input[2] )
                shift input; shift input
                while ( $#input > 0 &&   `echo  $input[1]  | cut -c1` != "-" )
                        set inarg =  $input[1]
                        if ( `echo  $inarg | cut -c1` != "-" ) then
                                set namefile    =   ( $namefile $inarg )
				if ( $#input == 1 ) goto alldone
                                shift input
                        endif
                end
        if ( $#input == 0 ) goto alldone
        breaksw
	case -glist:
		set glist        =  $input[2]
                set glist_opt    =  $input[3]
		breaksw		
 	case -h:
	case -header:
		set header      =  no
		breaksw
	case -figcap:
		set figcap      =  yes
		set header      =  no
		echo  $figcap  $header    
		breaksw
	case -vs:
                set VELscale     = yes 
